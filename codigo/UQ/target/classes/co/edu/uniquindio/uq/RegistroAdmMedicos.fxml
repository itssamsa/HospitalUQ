<AnchorPane prefHeight="700.0" prefWidth="770.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.uq.viewController.RegistroAdmMedicosController">
    <children>
        <!-- Datos personales -->
        <Label layoutX="50.0" layoutY="200.0" text="Nombre">
