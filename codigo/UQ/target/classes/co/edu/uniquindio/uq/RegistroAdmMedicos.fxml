            <font><Font name="Verdana Bold" size="12.0" /></font>
        </Button>
        <Button fx:id="btnVolver" layoutX="640.0" layoutY="630.0" mnemonicParsing="false" onAction="#onVolver" style="-fx-background-color: #263F73;" text="Volver" textFill="WHITE">
