<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="638.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.uq.viewController.CancelarCitaController">
    <children>
        <!-- Título -->
        <Label layoutX="50.0" layoutY="20.0" style="-fx-font-size: 18px;" text="Cancelar Cita" />

        <!-- Campo para ingresar la cédula -->
        <Label layoutX="50.0" layoutY="70.0" text="Ingrese la cédula del paciente:" />
        <TextField fx:id="txtCedula" layoutX="240.0" layoutY="65.0" promptText="Cédula" />

        <!-- Botón de Buscar -->
        <Button fx:id="btnBuscar" layoutX="480.0" layoutY="65.0" onAction="#onBuscar" text="Buscar" />

        <!-- Tabla para mostrar las citas -->
        <TableView fx:id="tablaCitas" layoutX="50.0" layoutY="120.0" prefHeight="200.0" prefWidth="550.0">
            <columns>
                <TableColumn fx:id="colCita" prefWidth="500.0" text="Detalles de la Cita" />
            </columns>
        </TableView>

        <!-- Botón para cancelar la cita -->
        <Button fx:id="btnCancelarCita" layoutX="240.0" layoutY="340.0" onAction="#onCancelarCita" text="Cancelar Cita" />
      <Accordion />
      <ButtonBar layoutX="210.0" layoutY="333.0" prefHeight="40.0" prefWidth="200.0" />
    <Button fx:id="btonVolver" layoutX="540.0" layoutY="379.0" mnemonicParsing="false" onAction="#onVolver" text="Volver" />
    </children>
</AnchorPane>
