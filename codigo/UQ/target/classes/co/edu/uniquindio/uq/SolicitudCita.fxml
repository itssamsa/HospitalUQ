<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="638.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.uq.viewController.SolicitudCitaController">
    <children>
        <!-- Título -->
        <Label layoutX="50.0" layoutY="20.0" style="-fx-font-size: 18px;" text="Solicitud de Cita Médica" />
        <!-- Campo para ingresar la cédula -->
        <Label layoutX="50.0" layoutY="70.0" text="Ingrese la cédula del paciente:" />
        <TextField fx:id="txtCedula" layoutX="240.0" layoutY="65.0" promptText="Cédula" />
        <!-- Selección de Especialidad -->
        <Label layoutX="50.0" layoutY="120.0" text="Especialidad:" />
        <ComboBox fx:id="comboEspecialidad" layoutX="240.0" layoutY="115.0" prefWidth="200.0" promptText="Seleccionar Especialidad" />
        <!-- Selección de Médico -->
        <Label layoutX="50.0" layoutY="170.0" text="Médico:" />
        <ComboBox fx:id="comboMedico" disable="true" layoutX="240.0" layoutY="165.0" prefWidth="200.0" promptText="Seleccionar Médico" />
        <!-- Selección de Horario -->
        <Label layoutX="50.0" layoutY="220.0" text="Horario:" />
        <ComboBox fx:id="comboHorario" disable="true" layoutX="240.0" layoutY="215.0" prefWidth="200.0" promptText="Seleccionar Horario" />
        <!-- Botón para guardar la cita -->
        <Button fx:id="btnGuardarCita" layoutX="240.0" layoutY="280.0" onAction="#onGuardarCita" text="Guardar Cita" />
        <Button fx:id="btnVolver" layoutX="350.0" layoutY="280.0" onAction="#onVolver" text="Volver" />
    </children>
</AnchorPane>
