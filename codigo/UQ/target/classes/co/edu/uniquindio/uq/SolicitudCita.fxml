<AnchorPane prefHeight="600.0" prefWidth="770.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.uq.viewController.SolicitudCitaController">
    <children>
        <!-- Campo para ingresar la cédula -->
        <Label layoutX="141.0" layoutY="203.0" text="Ingrese la cédula del paciente:">
         <font>
            <Font name="Verdana Bold" size="12.0" />
         </font></Label>
        <TextField fx:id="txtCedula" layoutX="419.0" layoutY="198.0" promptText="Cédula" />
        <!-- Selección de Especialidad -->
        <Label layoutX="141.0" layoutY="271.0" prefHeight="17.0" prefWidth="220.0" text="Especialidad:">
         <font>
            <Font name="Verdana Bold" size="12.0" />
         </font></Label>
        <ComboBox fx:id="comboEspecialidad" layoutX="419.0" layoutY="267.0" prefWidth="200.0" promptText="Seleccionar Especialidad" style="-fx-background-color: #c6e4ff;" />
        <!-- Selección de Médico -->
        <Label layoutX="141.0" layoutY="328.0" prefHeight="17.0" prefWidth="68.0" text="Médico:">
         <font>
            <Font name="Verdana Bold" size="12.0" />
         </font></Label>
        <ComboBox fx:id="comboMedico" disable="true" layoutX="419.0" layoutY="324.0" prefWidth="200.0" promptText="Seleccionar Médico" style="-fx-background-color: #c6e4ff;" />
        <!-- Selección de Horario -->
        <Label layoutX="141.0" layoutY="433.0" prefHeight="17.0" prefWidth="68.0" text="Dia:">
         <font>
            <Font name="Verdana Bold" size="12.0" />
         </font></Label>
        <ComboBox fx:id="comboDia" disable="true" layoutX="419.0" layoutY="429.0" prefWidth="200.0" promptText="Seleccionar Dia" style="-fx-background-color: #c6e4ff;" />

        <Label layoutX="141.0" layoutY="466.0" prefHeight="17.0" prefWidth="68.0" text="Hora:">
            <font>
                <Font name="Verdana Bold" size="12.0" />
            </font></Label>
        <ComboBox fx:id="comboHora" disable="true" layoutX="419.0" layoutY="471.0" prefWidth="200.0" promptText="Seleccionar Hora" style="-fx-background-color: #c6e4ff;" />


        <!-- Botón para guardar la cita -->
        <Button fx:id="btnGuardarCita" layoutX="359.0" layoutY="535.0" onAction="#onGuardarCita" style="-fx-background-color: #263F73;" text="Guardar Cita" textFill="WHITE" />
        <Button fx:id="btnVolver" layoutX="691.0" layoutY="547.0" onAction="#onVolver" style="-fx-background-color: #263F73;" text="Volver" textFill="WHITE" />
      <AnchorPane layoutY="-2.0" prefHeight="102.0" prefWidth="801.0" style="-fx-background-color: #263F73;">
