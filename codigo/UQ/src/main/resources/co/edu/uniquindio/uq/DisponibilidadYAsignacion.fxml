<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="770.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="co.edu.uniquindio.uq.viewController.DisponibilidadYAsignacionController">
    <children>
        <!-- Desplegable de médicos -->
        <Label layoutX="108.0" layoutY="80.0" text="Seleccione el Médico:" />
        <ComboBox fx:id="comboMedicos" layoutX="108.0" layoutY="122.0" prefWidth="200" />

        <!-- Desplegable de pacientes -->
        <Label layoutX="119.0" layoutY="334.0" text="Seleccione el Paciente:" />
        <ComboBox fx:id="comboPacientes" layoutX="270.0" layoutY="330.0" prefWidth="200" />

        <!-- Campo para ingresar el nuevo horario del médico -->
        <Label layoutX="108.0" layoutY="206.0" text="Nuevo Horario:" />
        <TextField fx:id="campoHorario" layoutX="108.0" layoutY="248.0" prefWidth="200" />

        <!-- Botón para actualizar el horario -->
        <Button layoutX="351.0" layoutY="248.0" onAction="#actualizarHorario" text="Actualizar Horario" />

        <!-- Botón para asignar la cita -->
        <Button layoutX="311.0" layoutY="431.0" onAction="#asignarCita" text="Asignar Cita" />
      <Button fx:id="btnVolver" layoutX="670.0" layoutY="527.0" mnemonicParsing="false" onAction="#onVolver" text="Volver" />
    </children>
</AnchorPane>
