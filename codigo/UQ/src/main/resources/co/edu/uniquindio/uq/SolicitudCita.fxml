<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.uq.viewController.SolicitarCitaController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Título -->
    <Label layoutX="200.0" layoutY="20.0" text="Solicitud de Cita Médica" style="-fx-font-size: 20;" />

    <!-- Selección de Especialidad Médica -->
    <Label layoutX="50.0" layoutY="80.0" text="Especialidad Médica:" />
    <ComboBox fx:id="cmbEspecialidad" layoutX="200.0" layoutY="75.0" prefWidth="200.0" promptText="Seleccione Especialidad" />

    <!-- Selección de Médico -->
    <Label layoutX="50.0" layoutY="130.0" text="Médico:" />
    <ComboBox fx:id="cmbMedico" layoutX="200.0" layoutY="125.0" prefWidth="200.0" promptText="Seleccione Médico" disable="true" />

    <!-- Selección de Fecha -->
    <Label layoutX="50.0" layoutY="180.0" text="Fecha:" />
    <ComboBox fx:id="cmbFecha" layoutX="200.0" layoutY="175.0" prefWidth="200.0" promptText="Seleccione Fecha" />

    <!-- Selección de Horario -->
    <Label layoutX="50.0" layoutY="230.0" text="Horario Disponible:" />
    <ComboBox fx:id="cmbHorario" layoutX="200.0" layoutY="225.0" prefWidth="200.0" promptText="Seleccione Horario" disable="true" />

    <!-- Botón para Solicitar Cita -->
    <Button layoutX="250.0" layoutY="300.0" text="Solicitar Cita" onAction="#onSolicitarCita" />

    <!-- Botón para Volver -->
    <Button layoutX="480.0" layoutY="350.0" text="Volver" onAction="#setBtnVolver" />
</AnchorPane>
